<header class="w-full bg-white p-3 border-b border-gray-200">
  <div
    class="absolute top-0 left-0 w-full h-1 bg-gradient-to-t from-gray-200 to-red-600"
  >
  </div>
  <nav>
    <ul class="flex items-center justify-between max-w-6xl mx-auto px-4">
      <li>
        <a href="/">
          <span class="text-red-500 mr-1">‚Üê</span> Volver
        </a>
      </li>
      <li>
        <a href="/">
          <img src="./images/NeonVibe.webp" alt="NeonVibe Logo" width="90px">
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  import { cartItems } from "../store/cart";

  // Actualizar el contador del carrito
  const updateCartCount = () => {
    const cartCount = document.querySelector(".cart-count");
    if (cartCount) {
      const items = JSON.parse(localStorage.getItem("cartItems") || "[]");
      cartCount.textContent = items
        .reduce((total: any, item: any) => total + item.quantity, 0)
        .toString();
    }
  };

  // Update on page load
  updateCartCount();

  // Also subscribe to store changes
  cartItems.subscribe((items) => {
    const cartCount = document.querySelector(".cart-count");
    if (cartCount) {
      cartCount.textContent = items
        .reduce((total, item) => total + item.quantity, 0)
        .toString();
    }
  });
</script>
